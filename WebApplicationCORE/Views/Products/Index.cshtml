@model IEnumerable<APP.Business.Models.ProductResponse>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>
<hr />
<div class="container">
    @if (ViewBag.RecordsCount is not null)
    {
        <p class="text-primary">
            @ViewBag.RecordsCount
        </p>
    }
    @if (TempData["OperationMessage"] is not null)
    {
        <p class="text-primary">
            @TempData["OperationMessage"]
        </p>
    }
    <a asp-action="Create">Create</a>
    <table class="table">
        <tr>
            <th>
                @* Way 1: *@
                @* Product Name *@
                @* Way 2: *@
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
				@Html.DisplayNameFor(model => model.UnitPrice)
            </th>
			<th>
				@Html.DisplayNameFor(model => model.StockAmount)
            </th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                @* Way 1: *@
                @* <td>@category.Name</td> *@
                @* Way 2: *@
                <td>@Html.DisplayFor(model => product.Name)</td>

                <td>@Html.DisplayFor(model => product.Description)</td>

                <td><a asp-controller="Categories" asp-action="Details" asp-route-id="@product.Id">Details</a></td>
            </tr>
        }
    </table>
</div>

